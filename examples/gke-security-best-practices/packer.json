{
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "scalesec-dev",
      "ssh_username": "ubuntu",
      "source_image_family": "ubuntu-1604-lts",
      "zone": "us-west2-a",
      "image_name": "acme-ubuntu-1604-lts-base-{{timestamp}}",
      "image_description":"acme-hardened-ubuntu-1604-lts-base{{timestamp}}",
      "machine_type": "f1-micro"
    }
],
  "provisioners": [
    {
      "type": "file",
      "source": "builder/platform-uploads",
      "destination": "/tmp/builder",
      "direction": "upload"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo {{ .Path }}",
      "scripts": [
        "builder/builder.sh"
      ]
    }
  ]
}
